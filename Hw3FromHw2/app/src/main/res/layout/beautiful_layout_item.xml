<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="50"
    android:background="@color/primary500Indigo100PAlpha"
    >

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textOnWhiteBackground"
        android:background="@color/accentA100Pink100PAlpha"
        android:textSize="@dimen/stateTextSize"
        android:text="@string/USofA"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/bufferSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gMatLightGreen100PAlpha"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/square1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gMatWhite100PAlpha"
        android:width="@dimen/width"
        android:layout_gravity="center_vertical"
        android:height="@dimen/height"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/square2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gMatPurple100PAlpha"
        android:width="@dimen/width"
        android:height="@dimen/height"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"/>

</GridLayout>